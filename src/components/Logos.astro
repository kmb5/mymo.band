---
import { Icon } from "astro-icon/components";

interface Props {}

const {} = Astro.props;
---

<div class="mx-auto max-w-7xl px-6 lg:px-80 pb-20">
    <div
        class="mx-auto grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-12 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 sm:gap-y-14 lg:mx-0 lg:max-w-none lg:grid-cols-5"
    >
        <a
            href="https://open.spotify.com/artist/2CbkF34BbgaGtT6GKcUlqW"
            target="_blank"
            ><Icon
                name="mdi:spotify"
                class="col-span-2 max-h-16 w-full object-contain lg:col-span-1"
                width={158}
                height={48}
            /></a
        >
        <a href="https://www.facebook.com/mymoband" target="_blank"
            ><Icon
                name="mdi:facebook"
                class="col-span-2 max-h-16 w-full object-contain lg:col-span-1"
                width={158}
                height={48}
            /></a
        >
        <a href="https://www.instagram.com/mymo_music/" target="_blank"
            ><Icon
                name="mdi:instagram"
                class="col-span-2 max-h-16 w-full object-contain lg:col-span-1"
                width={158}
                height={48}
            /></a
        >
        <a
            href="https://music.apple.com/de/artist/mymo/1596783058"
            target="_blank"
            ><Icon
                name="mdi:apple"
                class="col-span-2 max-h-16 w-full object-contain lg:col-span-1"
                width={158}
                height={48}
            /></a
        >
        <a
            href="https://www.youtube.com/channel/UCSiAYzDGL_hi2xI1-LPBpGw"
            target="_blank"
            ><Icon
                name="mdi:youtube"
                class="col-span-2 max-h-16 w-full object-contain lg:col-span-1"
                width={158}
                height={48}
            /></a
        >
    </div>
</div>
